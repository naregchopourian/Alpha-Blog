<h1 align="center", class="indexTitle">Listing all of your Articles</h1>
	

<% @articles.each do |article| %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="well well-lg">
				<div class="article-title">
					<p class="articleTitle"> <%= link_to article.title, article_path(article) %></p>
				</div>
				<div class="article-description">
					<%= truncate(article.description, length: 100) %>
				</div>
				<div class="article-actions">
					<div class="jumbotronBtn">
		<p id="linkGoBack"><%= link_to "Delete this post", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %> <%= link_to "Edit this post", edit_article_path(article), class: "btn btn-primary" %></p>
 	</div>
 </div>
</div>
</div>
<% end %>










